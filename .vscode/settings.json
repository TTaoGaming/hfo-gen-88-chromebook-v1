{
  "python.analysis.extraPaths": [
    "./hfo_cold_obsidian/bronze",
    "./hfo_hot_obsidian/bronze"
  ],
  "editor.ruleIndex": [88],
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnSaveTimeout": 2000,
  "files.associations": {
    "*.jsonl": "jsono",
    "*.md": "markdown"
  },
  // Hygiene: avoid VS Code auto-indexing/watching huge ledgers & binary artifacts.
  // Keep paths discoverable for agents (donâ€™t exclude entire bronze trees).
  "files.exclude": {
    "**/.git/objects/**": true,
    "**/artifacts/**": true,
    "**/hfo_hot_obsidian/4_archive/**": true,
    "**/hfo_hot_obsidian/bronze/4_archive/**": true,
    "**/hfo_cold_obsidian/bronze/4_archive/**": true,
    "**/*.duckdb": true,
    "**/*.zim": true,
    "**/*.parquet": true
  },
  // Guardrails: prevent VS Code from trying to fully load giant files into memory.
  "files.maxMemoryForLargeFilesMB": 64,
  "editor.largeFileOptimizations": true,
  // Language server pressure controls (Chromebook-safe defaults).
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.maxTsServerMemory": 1024,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.indexing": false,
  "python.analysis.typeCheckingMode": "basic",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/hfo_hot_obsidian/4_archive/**": true,
    "**/hfo_hot_obsidian/bronze/4_archive/**": true,
    "**/hfo_hot_obsidian/bronze/3_resources/memory/**": true,
    "**/hfo_hot_obsidian/bronze/3_resources/ingest_sources/**": true,
    "**/hfo_cold_obsidian/bronze/4_archive/**": true,
    "**/hfo_cold_obsidian/bronze/3_resources/memory/**": true,
    "**/artifacts/**": true,
    "**/hfo_gen_88_cb_v2/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/*.jsonl": true,
    "**/*.duckdb": true,
    "**/*.zim": true,
    "**/*.parquet": true
  },
  "search.exclude": {
    "**/.git/objects/**": true,
    "**/hfo_hot_obsidian/4_archive/**": true,
    "**/hfo_hot_obsidian/bronze/4_archive/**": true,
    "**/hfo_hot_obsidian/bronze/3_resources/memory/**": true,
    "**/hfo_hot_obsidian/bronze/3_resources/ingest_sources/**": true,
    "**/hfo_cold_obsidian/bronze/4_archive/**": true,
    "**/hfo_cold_obsidian/bronze/3_resources/memory/**": true,
    "**/artifacts/**": true,
    "**/hfo_gen_88_cb_v2/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/*.jsonl": true,
    "**/*.duckdb": true,
    "**/*.zim": true,
    "**/*.parquet": true
  },
  "markdown.links.openLocation": "currentGroup",

  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.run": "onSave",

  "yaml.validate": true,
  "yaml.format.enable": true,

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "ruff.lint.run": "onSave",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  }
}