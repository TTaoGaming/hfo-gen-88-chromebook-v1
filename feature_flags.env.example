# Feature flags for Gen88 (example)
#
# Copy to .env (repo root) and set values to 1/true/yes/on to enable.
# Anything unset or set to 0/false will be skipped by scripts/mcp_env_wrap.sh when used with --if-enabled.

# MCP servers (VS Code MCP)
HFO_MCP_ENABLE_FILESYSTEM=0
HFO_MCP_ENABLE_MEMORY=0
HFO_MCP_ENABLE_SEQUENTIAL_THINKING=0
HFO_MCP_ENABLE_TIME=0
HFO_MCP_ENABLE_TAVILY=0
HFO_MCP_ENABLE_BRAVE_SEARCH=0
HFO_MCP_ENABLE_PLAYWRIGHT=0
HFO_MCP_ENABLE_GATEWAY_HUB=0

# Memory backends
# - Canonical write-path SSOT (Gen88 v4): doobidoo sqlite_vec via `mcp-memory-service`
# - Optional derived/caches: legacy MCP JSONL memory + Shodh
HFO_MCP_ENABLE_MCP_MEMORY_SERVICE=0
HFO_MCP_ENABLE_SHODH_MEMORY=0

# Optional local AI daemon
HFO_ENABLE_OLLAMA=0

# --- Lint / DevOps flags (OpenFeature via .env) ---
#
# Recommended: set these in `.env` (gitignored).
#
# Minimal set to keep friction low:
# - keep Mermaid + JSONL checks on (fast fail)
# - keep formatting/style checks opt-in

# Primary flag map (JSON). Example:
# HFO_OPENFEATURE_FLAGS_JSON='{"lint.enabled":true,"lint.mermaid":true,"lint.jsonl":true,"lint.prettier_check":false,"lint.markdownlint":false,"lint.tripwire.slow_ms":2500,"lint.tripwire.strict":false}'
HFO_OPENFEATURE_FLAGS_JSON=''

# Convenience overrides (optional): HFO_FLAG_LINT_ENABLED=1 sets lint.enabled=true
HFO_FLAG_LINT_ENABLED=1
HFO_FLAG_LINT_MERMAID=1
HFO_FLAG_LINT_JSONL=1
HFO_FLAG_LINT_PRETTIER_CHECK=0
HFO_FLAG_LINT_MARKDOWNLINT=0

# Tripwire knobs (optional). If strict=1, slow lint fails the commit.
HFO_FLAG_LINT_TRIPWIRE_SLOW_MS=2500
HFO_FLAG_LINT_TRIPWIRE_STRICT=0

# Syntax checks (fast, recommended ON)
HFO_FLAG_LINT_JSON_SYNTAX=1
HFO_FLAG_LINT_JSONC_SYNTAX=1
HFO_FLAG_LINT_YAML_SYNTAX=1

# Higher-friction linters (opt-in locally; recommended in CI)
HFO_FLAG_LINT_ESLINT=0
HFO_FLAG_LINT_TSC=0
HFO_FLAG_LINT_RUFF=0
HFO_FLAG_LINT_YAMLLINT=0
