{
  "name": "hfo-gen-88-chromebook",
  "version": "1.0.0",
  "description": "HFO Gen 88 Omega Workspace - Chromebook V-1",
  "scripts": {
    "start": "python3 -m http.server 8889 --directory hfo_hot_obsidian/bronze/2_areas/mission_thread_omega/",
    "launch": "xdg-open http://localhost:8889/omega_workspace_v52.html",
    "clean:chrome": "sudo apt purge google-chrome-stable -y && sudo apt autoremove -y",
    "hfo:setup": "npm install && echo 'SKIPPING LINUX-CHROME INSTALL (Use Native Chromebook Browser)'",
    "hfo:probe": "node scripts/hfo_host_probe.js",
    "hfo:shot:headless": "node scripts/hfo_screenshot.js headless",
    "hfo:shot:host": "node scripts/hfo_screenshot.js host",
    "status": "echo 'HFO Stability Status' && netstat -tulpn | grep 8889",
    "prepare": "husky"
  },
  "devDependencies": {
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "zod": "^3.22.4"
  }
}